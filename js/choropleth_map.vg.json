{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Funds Spend on Research and Development in Australia",
  "width": 800,
  "height": 400,
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/Joshua-Riantoputra/fit3179_hw10/refs/heads/main/data/STE_2021_AUST_GDA2020.topojson",
    "format": {"type": "topojson", "feature": "aus_state_map"}
  },
  "transform": [
    {
      "lookup": "properties.STE_CODE21",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Joshua-Riantoputra/fit3179_hw10/refs/heads/main/data/objective_v_category.csv"
        },
        "key": "Code",
        "fields": ["govt", "Uni", "Business"]
      }
    },
    {"fold": ["govt", "Uni", "Business"], "as": ["category", "money"]},
    {"filter": "datum.category == category_selector"}
  ],
  "params": [{
    "name": "category_selector",
    "bind": {
        "input": "select",
        "options": ["govt", "Uni", "Business"],
        "labels": ["Government", "Universities", "Businesses"],
        "name": "Select Category"
      }
    }],
  "layer": [
    {
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "title": "Spending, in thousands of Dollars",
          "field": "money", 
          "type": "quantitative",
          "scale": {"type": "linear"}
        },
      "tooltip": [
        {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
        {"field": "govt", "type": "quantitative", "title": "Government", "format": ","},
        {"field": "Uni", "type": "nominal", "title": "Universities", "format": ","},
        {"field": "Business", "type": "quantitative", "title": "Businesses", "format": ","}
        ]
      }
    },
    {
      "data": {
        "values": [{
          "label": "The Victorian government spends slightly \nmore than New South Wales on Research,\n whereas the total business expenditure \non research in New South Wales vastly \noutweighs Victoria"
        }]
      },
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "bottom",
        "dx": 430,
        "dy": 100,
        "fontSize": 11.5,
        "fontStyle": "italic",
        "lineBreak": "\n"
        },
      "encoding": {
        "text": {"field": "label", "type": "nominal"}
      }
    },
    {
      "data": {
        "values": [{
          "label": "The Northern Territory spends \nthe least amount of funds \nin all three categories"
        }]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dx": -300,
        "dy": -140,
        "fontSize": 11.5,
        "fontStyle": "italic",
        "lineBreak": "\n"
        },
      "encoding": {
        "text": {"field": "label", "type": "nominal"}
      }
    }
]
  
}
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "COVID-19 Active Cases (10 Oct 2020)",
  "width": 800,
  "height": 400,
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/Joshua-Riantoputra/fit3179_hw10/refs/heads/main/STE_2021_AUST_GDA2020.topojson",
    "format": {"type": "topojson", "feature": "aus_state_map"}
  },
  "transform": [
    {
      "lookup": "properties.STE_CODE21",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Joshua-Riantoputra/fit3179_hw10/refs/heads/main/data/state_v_socio_HE.csv"
        },
        "key": "State Code",
        "fields": ["Total"]
      }
    },
    {"calculate": "datum.Active + 0.1", "as": "Active Cases"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Total",
      "type": "quantitative",
      "scale": {"type": "linear"}
    },
    "tooltip": [
      {"field": "properties.STATE", "type": "nominal", "title": "Country"},
      {"field": "Total", "type": "quantitative"}
    ]
  }
}